<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow both HTTP and HTTPS for Cloudinary and other domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">res.cloudinary.com</domain>
        <domain includeSubdomains="true">cloudinary.com</domain>
        <domain includeSubdomains="true">picsum.photos</domain>
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
    </domain-config>

    <!-- Base config to support both HTTP and HTTPS -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
